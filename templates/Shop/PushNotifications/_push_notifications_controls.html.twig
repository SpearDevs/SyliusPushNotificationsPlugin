<div
    {{ stimulus_controller('shop/push-notifications', {
        publicKey: app.request.server.get('WEBPUSH_PUBLIC_KEY'),
        serviceWorkerPath: '/serviceWorker.js',
        subscribeUrl: '/' ~ app.request.locale ~ '/webpush/'
    }) }}
>
    <button
        class="ui button"
        style="display: none"
        data-notifications-status="default"
    >
        {{ 'speardevs_sylius_push_notifications_plugin.ui.push_notifications.subscribe'|trans }}
    </button>

    <span
        class="ui icon red basic label"
        style="display: none"
        data-notifications-status="denied"
    >
        <i class="remove icon"></i>

        {{ 'speardevs_sylius_push_notifications_plugin.ui.push_notifications.disabled_text'|trans }}
    </span>

    <span
        class="ui icon green basic label"
        style="display: none"
        data-notifications-status="granted"
    >
        <i class="checkmark icon"></i>

        {{ 'speardevs_sylius_push_notifications_plugin.ui.push_notifications.enabled_text'|trans }}
    </span>
</div>
